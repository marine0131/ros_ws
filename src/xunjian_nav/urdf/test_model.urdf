<?xml version="1.0"?>
<robot name="test_model">
	<material name = "blue">
		<color rgba="0 0 0.8 1"/>
	</material>
	<material name = "black">
		<color rgba ="0 0 0 1"/>
	</material>
	<material name = "white">
		<color rgba = "1 1 1 1"/>
	</material>
	<material name = "red">
		<color rgba = "1 0 0 1"/>
	</material>

	<link name = "base_link">
		<visual>
			<geometry>
				<cylinder length="0.6" radius="0.26"/>
			</geometry>
			<origin xyz = "0 0 0.3"/>
			<material name = "white"/>
		</visual>
	</link>
	<link name = "laser_link">
		<visual>
			<geometry>
				<cylinder length="0.04" radius="0.03"/>
			</geometry>
			<origin xyz = "0.21 0 0.67"/>
			<material name="red"/>
		</visual>
	</link>
	<joint name="base_to_laser" type="fixed">
		<parent link="base_link"/>
		<child link="laser_link"/>
		<origin xyz="0 0 0"/>	
	</joint>
</robot>
